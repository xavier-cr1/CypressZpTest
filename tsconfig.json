{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "target": "es5",
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "types": [
      // load cypress global type
      "cypress", "reflect-metadata", "node"
    ],
    "lib": ["es6"],
    "paths": {
      "@page-entities/*": ["cypress/integration/automation-core-pages/page-entities/*"],
      "@page-objects-models/*": ["cypress/integration/automation-core-pages/page-objects-models/*"],
    }
  },
  "include": [
    // process only spec files
    "cypress/**/*.ts"
  ]
}